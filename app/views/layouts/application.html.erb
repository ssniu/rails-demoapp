<!DOCTYPE html>
<html>
<head>
  <title>Kids Fun</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>
  <div class="navbar-header">
    <div class="navbar-inner">
      <nav class="navbar navbar-inverse">
         <div class="container">
           <a href="#" class="navbar-brand">Kids Fun</a>

              <% if user_signed_in? %>
              <ul class="nav pull-right">
              <li><%= link_to current_user.email, edit_user_registration_path %></li>
            </ul>
              <ul class="nav pull-right">
              <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
            </ul>
            <% else %>
            <ul class="nav pull-right">
               <li><%= link_to "Register", new_user_registration_path %></li>
             </ul>
             <ul class="nav pull-right">
               <li><%= link_to "Log in", new_user_session_path %></li>
             </ul>
              <% end %>

             <ul class="nav navbar-nav">

               <li role="presentation" class="active"><%= link_to "Home", homes_path %></li>
                   <li role="presentation" class="dropdown">
                     <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                      aria-haspopup="true" aria-expanded="false">Math<span class="caret"></span>
                     </a>
                       <ul class="dropdown-menu">
                         <li><%= link_to "Addition", math_addition_path %></li>
                         <li><%= link_to "Subtraction", math_subtraction_path %></li>
                         <li><%= link_to "Pattern", math_pattern_path %></li>
                       </ul>
                   </li>
               <li role="presentation" class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                      aria-haspopup="true" aria-expanded="false">Art<span class="caret"></span>
                  </a>
                  <ul class="dropdown-menu">
                      <li><%= link_to "Animals", art_animals_path %></li>
                      <li><%= link_to "Plants", art_plants_path %></li>
                      <li><%= link_to "Your own projects", art_your_own_project_path %></li>
                  </ul>
                </li>
                <li role="presentation" class="dropdown">
                   <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                       aria-haspopup="true" aria-expanded="false">Chinese<span class="caret"></span>
                   </a>
                   <ul class="dropdown-menu">
                       <li><%= link_to "Words", chinese_songs_path %></li>
                       <li><%= link_to "Stories", chinese_story_path %></li>
                       <li><%= link_to "Songs", chinese_words_path %></li>
                   </ul>
                 </li>
                 <li role="presentation" class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                        aria-haspopup="true" aria-expanded="false">Forum<span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><%= link_to "Parenting", forum_parenting_path %></li>
                        <li><%= link_to "Share", forum_share_path %></li>
                        <li><%= link_to "Help", forum_help_path %></li>
                    </ul>
                  </li>
             </ul>

           <div class="collapse navbar-collapse">
            <form class="navbar-form navbar-left">
              <div class="form-group">
                <input type="text" class="form-control" placeholder="Search">
              </div>
                <button type="submit" class="btn btn-default">Submit</button>
            </form>
          </div>

         </div>
      </nav>
    </div>
  </div>

  <div class="container">
    <% flash.each do |type, message| %>
      <div class="alert <%= flash_class type %>" role="alert">
        <button class="close" data-dismiss="alert">x</button>
        <%= message %>
      </div>
    <% end %>
    <%= yield %>
  </div>
</body>
</html>
